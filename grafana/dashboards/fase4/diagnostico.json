{
  "title": "Diagnóstico Fase 4",
  "panels": [
    {
      "type": "stat",
      "title": "Estado del endpoint monitoreado",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "probe_success",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Caído" },
                "1": { "text": "Activo" }
              }
            }
          ]
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Uptime del host (segundos)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "node_time_seconds - node_boot_time_seconds",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s"
}

